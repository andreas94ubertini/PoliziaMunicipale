            @Html.EditorFor(model => model.DataTrascrizione, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.DataTrascrizione, "", new { @class = "text-danger" })
        </div>
    </div>

