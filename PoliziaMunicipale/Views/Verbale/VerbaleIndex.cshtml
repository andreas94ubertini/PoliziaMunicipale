            @Html.DropDownListFor(model => model.IdViolazione, new SelectList(ViewBag.ListViolazioniOpt, "Value", "Text"), new {@class="form-select"})
            @Html.ValidationMessageFor(model => model.IdViolazione, "", new { @class = "text-danger" })
        </div>
    </div>
