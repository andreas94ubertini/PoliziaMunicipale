@model PoliziaMunicipale.Models.Verbale

@{
    ViewBag.Title = "VerbaleIndex";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal  border rounded-1 p-5 shadow">
